<form id="edit-post-form">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="{{post.title}}"
      required
    />
  </div>
  <div>
    <label for="content">Content:</label>
    <textarea
      id="content"
      name="content"
      rows="10"
      required
    >{{post.content}}</textarea>
  </div>
  <div>
    <button type="submit" id="update-post-btn" data-post-id="{{post.id}}">Update
      Post</button>
  </div>
</form>