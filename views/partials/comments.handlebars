<section class="mt-8">
  <h3 class="text-lg font-semibold mb-2">Comments</h3>
  {{#each comments}}
    <div class="bg-gray-100 p-4 rounded-lg mb-4">
      <p>{{this.content}}</p>
      <p class="text-sm text-gray-600">by
        {{this.user.username}}
        on
        {{format_date this.createdAt}}</p>
    </div>
  {{else}}
    <p class="text-gray-600">No comments yet.</p>
  {{/each}}
</section>